{
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2",
        "prettier": "^3.0.3"
    },
    "scripts": {
        "prepare": "husky install"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "overrides": [
            {
                "files": [
                    "*.yml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "lint-staged": {
        "*.{json,yml,ts,mts}": "prettier --write"
    }
}
